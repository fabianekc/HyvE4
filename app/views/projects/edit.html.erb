<% provide(:title, "Edit Project") %>
<h1 align="center">Edit Project</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, :rows => "3" %>

      <%= f.label :expertise %>
      <%= f.text_area :wissen, :rows => "3" %>
	  
      <%= f.label :work %>
      <%= f.text_area :tun, :rows => "3" %>
	  
      <%= f.label :plans %>
      <%= f.text_area :hoffen, :rows => "3" %>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
      <%= link_to "Delete Project", @project, method: :delete, data: {confirm: "You sure?" }, :id => :delete_project, :class => "btn btn-large btn-danger pull-right" %>

    <% end %>

  </div>
</div>

