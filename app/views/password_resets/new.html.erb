<% provide(:title, t('signin.resettitle')) %>
<h1 align="center"><%= t 'signin.resetheader' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_resets_path, :method => :post do %>
      <%= label_tag :email, t('general.email') %>
      <%= text_field_tag :email, params[:email]%>

      <%= submit_tag t('signin.resetbtn'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
