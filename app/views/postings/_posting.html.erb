<li>
  <span class="content"><%= posting.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(posting.created_at) %> ago.
  </span>
  <% if current_user?(posting.user) %>
    <%= link_to "delete", posting, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: posting.content %>
  <% end %>
</li>
