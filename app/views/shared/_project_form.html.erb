<%= form_for(@project, :url => { :controller => 'projects', :action => 'create' }, class: "form-horizontal") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :name, placeholder: t('user.newprojectHint'), class: "input-xlarge" %>
  <%= f.submit t('user.newprojectBtn'), id: "create_project", class: "btn btn-large btn-primary pull-right", style: "margin-right: 30px" %>
<% end %>
